    ViewData["Title"] = "Edytuj projekt";
}

<h1>Edit</h1>

<h4>App</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="App.id" />
            <div class="form-group">
                <label asp-for="App.name" class="control-label">Nazwa projektu</label>
                <input asp-for="App.name" class="form-control" />
